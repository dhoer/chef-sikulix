#!/bin/bash
#
# <%=@new_resource.name%>
#
# chkconfig: 345 90 25
# description: Selenium <%=@new_resource.role%>

# Source function library.
. /etc/init.d/functions

java="<%=node['selenium2']['linux']['java']%>"
args="<%=@args%>"
lockfile="/var/lock/subsys/<%=@new_resource.name%>"
pidfile="/var/run/<%=@new_resource.name%>.pid"
logfile="/var/log/<%=@new_resource.name%>.log"
prog="<%=@new_resource.name%>"
display="<%=@new_resource.display%>"
port="<%=@port%>"

RETVAL=0

start() {
  echo -n $"Starting $prog: "
  export DISPLAY=$display
  $java $args >> $logfile 2>&1 &
  RETVAL=$?
  pid=$!
  echo $pid > $pidfile

  listen=0
  while [ $listen -eq 0 ];
  do
    listen=`netstat -ltn | awk '{print $4}' | grep "${port}$" | wc -l`
    sleep 1
  done

  [ $RETVAL -eq 0 ] && echo_success || echo_failure

  echo
  [ $RETVAL -eq 0 ] && touch $lockfile
  return $RETVAL
}

stop() {
  echo -n $"Stopping $prog: "
  killproc -p $pidfile $prog
  RETVAL=$?
  echo
  [ $RETVAL -eq 0 ] && rm -f $lockfile $pidfile
  return $RETVAL
}

restart() {
  stop
  start
}


case "$1" in
  start)
    start
    ;;
  stop)
    stop
    ;;
  status)
    status -p ${pidfile} ${prog}
    RETVAL=$?
    ;;
  restart)
    restart
    ;;
  *)
    echo $"Usage: $0 {start|stop|restart}"
    exit 1
esac
