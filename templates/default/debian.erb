JAVA="<%= @java %>"
ARGS="<%= @jvm_args %> -jar <%= @jar %> <%= @port %>"
PIDFILE=/var/run/sikulixremoteserver.pid
case "$1" in
  start)
    echo -n "Starting SikuliX Remote Server"
    export DISPLAY=<%= @display %>
    /sbin/start-stop-daemon --start --quiet --pidfile $PIDFILE --make-pidfile --background --startas "$JAVA" -- $ARGS
    echo "."
    ;;
  stop)
    echo -n "Stopping SikuliX Remote Server"
    /sbin/start-stop-daemon --stop --quiet --pidfile $PIDFILE
    rm -f $PIDFILE
    echo "."
    ;;
  restart)
    $0 stop
    $0 start
    ;;
  *)
    echo "Usage: /etc/init.d/sikulixremoteserver {start|stop|restart}"
    exit 1
esac
exit 0
